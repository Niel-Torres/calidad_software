<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mi_cuenta"
    tools:context="com.example.grupo7.comunio.Activities.MiCuentaActivity">

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageView3"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF4C7100"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textSize="25dp"
        android:text="Usuario"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5e5e5e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textNombreUsuario"
        android:layout_marginLeft="7dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF4C7100"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:layout_below="@+id/textNombreUsuario"
        android:textSize="25dp"
        android:text="Email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5e5e5e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textEmail"
        android:layout_marginLeft="7dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF4C7100"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textSize="25dp"
        android:text="Liga"
        android:layout_below="@+id/textEmail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5e5e5e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textLiga"
        android:layout_marginLeft="7dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF4C7100"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textSize="25dp"
        android:text="Saldo"
        android:layout_below="@+id/textLiga"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/textView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5e5e5e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textSaldoActual"
        android:layout_marginLeft="7dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
